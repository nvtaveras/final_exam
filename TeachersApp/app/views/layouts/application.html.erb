<!DOCTYPE html>
<html>
<head>
  <title>TeachersApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="jumbotron">
  <h1>teacher<b>App</b></h1>
  <p>Welcome to the <b>greatest</b> teachers app!</p>
</div>

<% flash.each do |name, message| %>
  <div class="<%= flash_class(name) %>">
    <%= message %>
  </div>
<% end %>

<b>
  <ul class="nav nav-pills">
    <li><%= link_to 'Home',  teachers_path %></li>
    <li><%= link_to 'New Teacher',  new_teacher_path %></li>
  </ul>
</b>

<%= yield %>

</body>
</html>
