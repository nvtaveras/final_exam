<h1> Teacher's List </h1>
<a href="<%= teachers_path + '/active' %>" class="btn btn-primary" role="button" >Sort by Active Subjects</a>
<a href="<%= teachers_path + '/name' %>" class="btn btn-primary" role="button" >Sort by Name</a>

<table class="table table-striped">
  <tr>
    <th width="100">Name</th>
    <th width="100">Code</th>
    <th width="100">Active Subjects</th>
    <th width="100" colspan="3">Actions</th>
  </tr>
    <% for t in @teachers %>
      <tr>
        <td><%= t.name %> </td>
        <td><%= t.code %> </td>
        <td><%= t.active_subjects %></td>
        <td width="55"><%= link_to 'Edit', edit_teacher_path(t) %></td>
        <td><%= link_to 'Delete', t, :method => 'delete' %></td>
      </tr>
    <% end %>
</table>
<br />